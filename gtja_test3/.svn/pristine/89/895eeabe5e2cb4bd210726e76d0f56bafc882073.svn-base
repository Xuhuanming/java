/*
  公用样式和模块样式
  edit by wangdong
*/
/*定义变量*/
html,
body {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "微软雅黑";
}
a,
a:hover,
a:active {
  text-decoration: none;
}
/*背景面板*/
.bg-panel {
  width: 400px;
  border-radius: 3px;
  border: 1px solid #c1c1c1;
  margin: 100px auto 10px;
}
/*内容标题*/
.content-title {
  text-align: center;
  margin: 16px auto 16px;
}
/*内容*/
.content {
  margin: 10px auto;
}
/*输入内容*/
.info-input {
  margin: 5px auto 10px;
  width: 85%;
}
.info-input label {
  width: 70px;
  font-size: 15px;
  display: inline-block;
}
.info-input input {
  height: 20px;
}
.info-input b {
  color: #ff2d4e;
}
.info-input span {
  font-size: 12px;
  width: 84px;
  color: #ff2d4e;
  display: inline-block;
}
/*按钮*/
.btn-group {
  text-align: center;
  margin: 20px auto 20px;
}
.btn {
  width: 50px;
  height: 30px;
  border: 1px solid #c1c1c1;
  display: inline-block;
  background-color: #ffffff;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;
}
/*信息提示框*/
.msg-bg {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  display: block;
  text-align: center;
}
.msg-bg .msg-panel {
  width: 300px;
  height: 50px;
  background-color: #ffffff;
  display: inline-block;
  border: 1px solid #c1c1c1;
  border-radius: 3px;
  line-height: 50px;
  word-spacing: 5px;
  margin-top: 200px;
  opacity: 0;
  -webkit-transition: all 0.6s ease-in-out;
  -moz-transition: all 0.6s ease-in-out;
  transition: all 0.6s ease-in-out;
}
/*确认提示弹窗*/
.pop-box {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  display: none;
}
.pop-box .bg-panel {
  height: 100px;
  background-color: #ffffff;
}
.pop-box .bg-panel .btn-group {
  height: 100px;
  margin: 0;
  position: relative;
  line-height: 100px;
}
.pop-box .bg-panel .btn-group .btn {
  width: 80px;
  position: relative;
  top: 0;
  bottom: 0;
}
.pop-box .bg-panel .btn-group .cancle {
  margin-right: 50px;
}
